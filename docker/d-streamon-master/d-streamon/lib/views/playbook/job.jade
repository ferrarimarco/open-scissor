							//input.form-control(type="text" placeholder="myplay.yml" ng-model="job.data.play_file")
							//- input.form-control( id="xmlConfig" type="file" ng-model="job.data.play_file")
							select#xmlConfig.form-control(ng-model="job.data.play_file" )
								option(value="") ---Please select---
								option(ng-repeat="option in job.data.available_play_file", value="{{option.name}}") {{option.name}}

					//- .form-group
					//- 	label.control-label.col-sm-4 Extra vars
