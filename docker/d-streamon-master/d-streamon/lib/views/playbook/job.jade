h1
	span(ng-if="!job.data._id || job.data._id == 'new'") Add Probe to "{{ playbook.data.name }}"
	span(ng-if="job.data._id.length > 0 && job.data._id != 'new'") Edit Probe

.row
	div(ng-class="{ 'col-md-6': !job.data._id || job.data._id == 'new', 'col-md-12': job.data._id.length > 0 && job.data._id != 'new'}")
		.panel.panel-default
			.panel-body
				form.form-horizontal
					.form-group
						label.control-label.col-sm-4 Name
						.col-sm-7
							input.form-control(type="text" placeholder="Probe Name" ng-model="job.data.name")

					.form-group
						//label.control-label.col-sm-4 Play
						label.control-label.col-sm-4 Xml File
